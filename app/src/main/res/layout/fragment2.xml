            android:layout_height="wrap_content"
            android:background="#DDC1ED"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgakshardham"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                app:srcCompat="@drawable/akshardham" />

            <TextView
                android:id="@+id/txtakshardham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/akshardhamtext"
                android:textColor="#190029"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtmore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textmore"
                android:textColor="#190029"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgindiagate"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                app:srcCompat="@drawable/indiagate" />

            <TextView
                android:id="@+id/txtindiagate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/indiagatetext"
                android:textColor="#190029"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtmore1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textmore1"
                android:textColor="#190029"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgjamamasjid"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                app:srcCompat="@drawable/jamamasjid" />

            <TextView
                android:id="@+id/txtjamamasjid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
