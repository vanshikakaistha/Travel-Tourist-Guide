                android:textColor="#190029"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtmore2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textmore2"
                android:textColor="#190029"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgredfort"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                app:srcCompat="@drawable/redfort" />

            <TextView
                android:id="@+id/txtredfort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/redforttext"
                android:textColor="#190029"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtmore3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
